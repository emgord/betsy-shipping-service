<div class="container">
    <%= render 'layouts/navbar' %>
  <div class="row">
    <div class="col-lg-12">
      <h1><%= @current_merchant.username %>'s Orders</h1>
    </div>
  </div>

<h1>Please Select a Shipping Option</h1>

<%= form_for @order, url: order_confirm_path(@order.id), class:"form-inline" do |f| %>
  <% @order.order_items.each do |order_item| %>
    <%= f.fields_for :order_items, order_item do |shipping_type| %>
      <legend>Shipping Options For <%= order_item.product.name %></legend>
        <% price_hash = @shipping_costs[order_item.id] %>
        <% price_hash.each do |method, price| %>
        <% price = number_to_currency(price/100) %>
          <div class="form-group radio">
            <%= shipping_type.radio_button :shipping_type, method %> <%= "#{method}: #{price}" %><br>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <%= submit_tag "Place Order", class: "btn btn-primary" %>
  <% end %>

</div>
